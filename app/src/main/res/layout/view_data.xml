<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F8FF"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    tools:context=".CurrentDataFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/decibels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decibel Average: " />
        <TextView
            android:id="@+id/phone_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Model: " />
        <TextView
            android:id="@+id/api_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone API Level: " />

    </LinearLayout>
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude: " />

    <TextView
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude: " />
    <TextView
        android:id="@+id/standard_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: " />
    </LinearLayout>

</RelativeLayout>